


<h1>EDITAR {{name}}<h1>



        <div class="container">
            <h1>Editar eventos</h1>

            <form method="POST" action="/events/edit?events_id={{events.id}}">

                <div class="form-group">
                    <label>Nombre</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>

                <div class="form-group">
                    <label>Descripción</label>
                    <input name="description" type="text" class="form-control" id="description-input" value="{{description}}">
                </div>

                <div class="form-group">
                    <label>Duración</label>
                    <input name="duration" type="text" class="form-control" id="duration-input" value="{{duration}}">
                </div>

                <div class="form-group">
                    <label>Fecha</label>
                    <input name="date" type="text" class="form-control" id="date-input" value="{{date}}">
                </div>

                <div class="form-group">
                    <label>Género</label>
                    <input name="genre" type="text" class="form-control" id="genre-input" value="{{genre}}">
                </div>

                <div class="form-group">
                    <label>Localización</label>
                    <input name="location" type="text" class="form-control" id="location-input" value="{{location}}">
                </div>

                <div class="form-group">
                    <label>Active</label>
                    <input name="active" type="text" class="form-control" id="active-input" value="{{active}}">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Modificar evento</button>

            </form>

        </div>
   